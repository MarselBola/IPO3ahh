<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crearpartida">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/OurTheme">
        <activity
            android:name=".userlist.CreateUser"
            android:screenOrientation="portrait" />
        <activity
            android:name=".userlist.UserList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CrearPartida"
            android:screenOrientation="landscape" />
        <activity
            android:name=".triggers.Avisos"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pool.ManaTotal"
            android:screenOrientation="landscape"
            android:theme="@style/OurTheme" />
        <activity
            android:name=".StartMenu"
            android:theme="@style/OurTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dice.DausActivity"
            android:screenOrientation="landscape"
            android:theme="@style/OurTheme" />
        <activity
            android:name=".pool.AddMana"
            android:screenOrientation="landscape"
            android:theme="@style/OurTheme" />
        <activity
            android:name=".InGame"
            android:screenOrientation="landscape" />
    </application>

</manifest>